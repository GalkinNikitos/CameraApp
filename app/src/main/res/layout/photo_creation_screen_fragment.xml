<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PhotoCreationScreenFragment">

    <androidx.camera.view.PreviewView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/preview"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/button_go_to_video"
            android:layout_width="10dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/go_to_video_camera" />

        <ImageButton
            android:id="@+id/button_take_a_photo"
            android:layout_width="10dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/take_a_photo" />

        <ImageButton
            android:id="@+id/button_turn_a_camera"
            android:layout_width="10dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/turn_a_camera" />

        <ImageButton
            android:id="@+id/button_go_to_gallery"
            android:layout_width="10dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/go_to_gallery" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>